<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane minHeight="500.0" minWidth="500.0" prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="viewcontroller.ViewController">
   <children>
      <VBox prefHeight="465.0" prefWidth="491.0" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="30.0">
         <children>
            <Pane prefHeight="56.0" prefWidth="490.0">
               <children>
                  <ComboBox fx:id="cmb_currencyToPay" layoutX="14.0" layoutY="25.0" onAction="#onCurrencySelected" prefWidth="150.0" promptText="Currency to pay" />
                  <Label layoutX="14.0" layoutY="6.0" text="Currency to pay with:" />
                  <Button fx:id="btn_load" layoutX="263.0" layoutY="25.0" mnemonicParsing="false" onAction="#onLoadClicked" prefHeight="25.0" prefWidth="131.0" text="Load Trades" />
               </children>
            </Pane>
            <Pane prefHeight="78.0" prefWidth="490.0">
               <children>
                  <ComboBox fx:id="cmb_tier" layoutX="14.0" layoutY="14.0" onAction="#onTierComboSelected" prefWidth="150.0" promptText="Tier" />
                  <ComboBox fx:id="cmb_map" layoutX="14.0" layoutY="39.0" onAction="#onMapComboSelected" prefWidth="150.0" promptText="Map" />
                  <Button fx:id="btn_nextTrade" layoutX="187.0" layoutY="16.0" mnemonicParsing="false" onAction="#onNextTradeClick" prefHeight="46.0" prefWidth="283.0" text="Next trade" />
               </children>
            </Pane>
            <Pane prefHeight="346.0" prefWidth="490.0">
               <children>
                  <TableView fx:id="tbl_content" layoutX="14.0" layoutY="16.0" prefHeight="310.0" prefWidth="450.0" />
               </children>
            </Pane>
         </children>
      </VBox>
      <MenuBar prefHeight="25.0" prefWidth="500.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </children>
</AnchorPane>
